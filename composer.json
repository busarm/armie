{
    "name": "busarm/php-mini",
    "description": "A micro php framework designed for micro-services",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Gabriel",
            "email": "splendy5@gmail.com"
        }
    ],
    "autoload": {
        "files": [
            "bootstrap/helpers.php"
        ],
        "psr-4": {
            "Busarm\\PhpMini\\": "src/",
            "Busarm\\PhpMini\\Test\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "!/bootstrap/*",
            "!/src/*"
        ]
    },
    "scripts": {
        "test": "./vendor/bin/phpstan analyse --level 2 src tests && php -d xdebug.mode=coverage ./vendor/bin/phpunit tests -v"
    },
    "keywords": [
        "php",
        "framework",
        "microservice"
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "psr/log": "^2.0",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "symfony/console": "^6.0",
        "symfony/process": "^6.0",
        "nyholm/psr7": "^1.5"
    },
    "require-dev": {
        "middlewares/firewall": "^2.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8"
    }
}
