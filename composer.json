{
    "name": "busarm/armie",
    "description": "An elegant PHP framework designed to provide high performance with optimal developer experience",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Gabriel",
            "email": "splendy5@gmail.com"
        }
    ],
    "autoload": {
        "files": [
            "bootstrap/constants.php",
            "bootstrap/helpers.php"
        ],
        "psr-4": {
            "Armie\\": "src/",
            "Armie\\Test\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true
    },
    "scripts": {
        "analyze": "./vendor/bin/phpstan analyse --level 3 src tests",
        "phpunit": "./vendor/bin/phpunit tests -v",
        "test": "composer run analyze && composer run phpunit -- --exclude skip",
        "test-local": "composer run analyze && composer run phpunit",
        "test-skip": "composer run phpunit -- --group skip",
        "test-pdo": "composer run phpunit -- --group pdo",
        "test-pdo-edit": "composer run phpunit -- --group pdo-edit",
        "test-pdo-get": "composer run phpunit -- --group pdo-get",
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-update-cmd": [
            "composer dump-autoload --optimize"
        ]
    },
    "keywords": [
        "php",
        "framework",
        "event-loop",
        "asynchronous",
        "microservice"
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "psr/log": "^2.0",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "symfony/console": "^6.0",
        "symfony/process": "^6.0",
        "nyholm/psr7": "^1.5",
        "guzzlehttp/guzzle": "^7.5",
        "psr/cache": "^3.0",
        "workerman/workerman": "^4.1",
        "laravel/serializable-closure": "^1.3"
    },
    "require-dev": {
        "middlewares/firewall": "^2.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8",
        "fakerphp/faker": "^1.20"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "composer run test"
            ],
            "pre-push": [],
            "post-merge": "composer update"
        }
    }
}